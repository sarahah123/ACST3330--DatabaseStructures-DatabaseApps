@model IEnumerable<ExamsAndAverages.Models.TestEntry>

@{
    ViewBag.Title = "List";
}

<h2>@Html.Raw(ViewBag.Message)</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.Label("Exams Submitted")
        </th>
        <th>
            @Html.Label("Average")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
        <td>
            @{ 
                String average = "0";
                if (item.amount > 0) {
                    average = string.Format("{0:0.##}", item.sum / item.amount);
                }
                @average
            }
        </td>
        <td>
            @Html.ActionLink("Add Score", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
